<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--设置圆形边框-->
    <item>
        <shape android:shape ="oval">
            <!--设置圆形边界弧度-->
            <corners android:radius="3dip"/>
            <!--设置圆形边界颜色-->
            <solid android:color="#0000ff"/>
        </shape>
    </item>
    <!--设置圆形内部-->
    <item
        android:bottom="2dp"
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        >
        <shape android:shape="oval">
            <!--设置圆形内部弧度-->
            <corners android:radius="3dip"/>
            <!--设置圆形内部颜色-->
            <solid android:color="#00ff00"/>
        </shape>
    </item>
</layer-list>
